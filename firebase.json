{
  "firestore": {
    "rules": "firestore.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080,
      "indexes": "./firestore.indexes.json"
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "enabled": true
    }
  },
  "functions": {
    "predeploy": [],
    "source": "functions"
  },
  "hosting": [
    {
      "target": "api",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    }
  ]
}
