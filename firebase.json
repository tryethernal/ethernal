{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080,
      "rules": "./firestore.rules",
      "indexes": "./firestore.indexes.json"
    },
    "database": {
      "port": 9000,
      "rules": "./database.rules.json"
    },
    "ui": {
      "enabled": true
    }
  },
  "functions": {
    "predeploy": [],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  }
}
